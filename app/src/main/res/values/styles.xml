<resources>

    <style name="drawer_item_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/drawer_item_text_size</item>
    </style>

    <style name="pub_name_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/pub_name_textsize</item>
    </style>

    <style name="pub_item_name_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/pub_item_name_textsize</item>
    </style>

    <style name="pub_item_address_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/pub_item_address_textsize</item>
    </style>

    <style name="pub_address_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/pub_address_textsize</item>
    </style>

    <style name="pub_description_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/pub_description_textsize</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
